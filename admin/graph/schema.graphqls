# GraphQL schema example
#
# https://gqlgen.com/getting-started/

scalar Int64
scalar Uint32

type Tx {
    hash: String!
    raw: String!
    inputs: [TxInput!]!
    outputs: [TxOutput!]!
}

type TxInput {
    tx: Tx!
    hash: String!
    index: Uint32!
    prev_hash: String!
    prev_index: Uint32!
    output: TxOutput!
}

type TxOutput {
    tx: Tx!
    hash: String!
    index: Uint32!
    amount: Int64!
    script: String!
    spends: [TxInput]
}

type Query {
    tx(hash: String!): Tx!
    txs: [Tx!]!
}

type Mutation {
    null: Int
}

